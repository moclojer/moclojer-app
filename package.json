{
  "name": "front-helix",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "shadow-cljs compile app",
    "ci:tests": "shadow-cljs compile ci-tests && karma start --single-run",
    "app:watch": "shadow-cljs watch tests app",
    "shadow:release": "shadow-cljs release app",
    "postcss:build": "cross-env TAILWIND_MODE=build postcss src/css/tailwind.css -o ./resources/public/assets/css/output.css --verbose",
    "postcss:watch": "cross-env TAILWIND_MODE=watch postcss src/css/tailwind.css -o ./resources/public/assets/css/output.css --verbose -w",
    "postcss:release": "cross-env NODE_ENV=production postcss src/css/tailwind.css -o ./resources/public/assets/css/output.css --verbose",
    "watch": "run-p -l *:watch",
    "release": "run-s *:release",
    "repl": "shadow-cljs clj-repl"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moclojer/front-helix.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/moclojer/front-helix/issues"
  },
  "homepage": "https://github.com/moclojer/front-helix#readme",
  "devDependencies": {
    "@testing-library/react": "^13.4.0",
    "autoprefixer": "^10.4.12",
    "cssnano": "^5.1.14",
    "karma": "^6.4.1",
    "karma-chrome-launcher": "^3.1.1",
    "karma-cljs-test": "^0.1.0",
    "msw": "^0.47.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "shadow-cljs": "^2.20.7",
    "tailwindcss": "^3.2.1"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "@codemirror/autocomplete": "0.18.8",
    "@codemirror/closebrackets": "0.18.0",
    "@codemirror/commands": "0.18.3",
    "@codemirror/comment": "0.18.1",
    "@codemirror/fold": "0.18.2",
    "@codemirror/gutter": "0.18.4",
    "@codemirror/highlight": "0.18.4",
    "@codemirror/history": "0.18.1",
    "@codemirror/language": "0.18.2",
    "@codemirror/lint": "0.18.6",
    "@codemirror/matchbrackets": "0.18.0",
    "@codemirror/rectangular-selection": "0.18.1",
    "@codemirror/search": "0.18.4",
    "@codemirror/state": "0.18.7",
    "@codemirror/view": "0.18.19",
    "cross-env": "^7.0.3",
    "js-cookie": "^3.0.1",
    "postcss-focus-visible": "^6.0.4",
    "react": "^18.2.0",
    "react-dom": "18.2.0",
    "react-refresh": "^0.14.0",
    "react-router-dom": "^6.4.2",
    "use-sync-external-store": "1.2.0"
  },
  "msw": {
    "workerDirectory": "resources/public"
  }
}
